@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model No1.Web.Pages.Categories.IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<No1Resource> L
@{
    var title = L["Categories"].Value;
    var addNew = L["Add New"].Value;
    PageLayout.Content.Title = title;
}

@section scripts {
    <abp-script src="/Pages/Categories/Categories.js" />
}


<!-- Categories -->
<div class="container">
    <div class="d-flex align-items-center mb-3">
        <div>
            <h1 class="page-header mb-0">@title</h1>
        </div>
        <div class="mt-3 ms-auto">
            <a id="NewCategory" class="btn btn-primary btn-rounded px-4 rounded-pill"><i class="fa fa-plus fa-lg me-2 ms-n2 text-success-900"></i> @L["New"].Value</a>
        </div>
    </div>

