@using No1.Templates.Email.ConfirmRegistration;

@inherits Volo.Abp.TextTemplating.Razor.RazorTemplatePageBase<ConfirmRegistrationModel>

<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<head>
    <style type="text/css">
        body { font-family: 'Roboto', sans-serif; }
    </style>
</head>
<body>
<table class="body-wrap" style="background-color: #f6f6f6; background-image: url('~/Templates/Images/bg.png'); background-repeat: no-repeat; background-size: cover; box-sizing: border-box; height: 100%; width: 100%;">
    <tbody>
    <tr style="box-sizing: border-box; margin: 0;">
        <td class="container" width="700" style="box-sizing: border-box; clear: both !important; display: block !important; margin: 0 auto; max-width: 700px !important; padding: 20px; vertical-align: top;">
            <div class="content" style="box-sizing: border-box; display: block; margin: 0 auto; max-width: 700px; padding: 20px;">

                <table class="main" width="100%" style="background-color: #fff; border: 1px solid #e9e9e9; border-radius: 3px; box-sizing: border-box;" bgcolor="#fff">
                    <tbody>
                    <tr>
                        <td class="" style="background-color: #00BCD4; background-image: url('~/Templates/Images/mobilebg.png'); background-size: cover; border-radius: 3px 3px 0 0; box-sizing: border-box; color: #fff; font-family: 'Roboto'; font-size: 22px; margin: 0; padding: 60px 0 50px; text-align: center; vertical-align: top;" align="center" bgcolor="#71b6f9" valign="top">
                            <div href="#" style="color: #fff; font-family: 'Roboto', sans-serif; font-size: 32px;">LASSETS</div>
                        </td>
                    </tr>

                    <tr>
                        <td class="content-wrap" style="box-sizing: border-box; margin: 0; padding: 20px; vertical-align: top;" valign="top">
                            <table width="100%" cellpadding="0" cellspacing="0" style="box-sizing: border-box; margin: 0;">
                                <tbody>
                                <tr>
                                                    <td class="content-block" style="box-sizing: border-box; font-family: 'Roboto', sans-serif; font-size: 30px; font-weight: lighter; margin: 0; padding: 0 0 40px; text-align: center; vertical-align: top;">@Localizer["User:EmailTemplate:ConfirmRegistration:Welcome"]</td>
                                </tr>

                                <tr>
                                    <td class="content-block" style="box-sizing: border-box; font-family: 'Roboto', sans-serif; font-size: 22px; font-weight: bold; margin: 0; padding: 0 0 20px; text-align: center; vertical-align: top;" valign="top">@Model.Name @Model.Surname</td>
                                </tr>

                                <tr>
                                    <td class="content-block" style="box-sizing: border-box; font-family: 'Roboto', sans-serif; font-size: 16px; margin: 0; padding: 0 0 20px; text-align: center; vertical-align: top;" valign="top">
                                        <p>@Localizer["User:EmailTemplate:ConfirmRegistration:Thanks"]</p>
                                        <p>@Localizer["User:EmailTemplate:ConfirmRegistration:Info"]</p>
                                    </td>
                                </tr>

                                <tr>
                                    <td class="content-block" style="padding: 0 0 20px; text-align: center;">

                                                        <a href="@Model.ConfirmationUrl" target="_blank" class="btn-primary" style="background-color: #00BCD4; border-color: #00BCD4; border-radius: 5px; border-style: solid; border-width: 8px 16px; box-sizing: border-box; color: #FFF; cursor: pointer; display: inline-block; font-family: 'Roboto', sans-serif; font-size: 14px; line-height: 2em; margin: 0; text-align: center; text-decoration: none; text-transform: capitalize;">@Localizer["User:EmailTemplate:ConfirmRegistration:Title"]</a>
                                    </td>
                                </tr>

                                <tr>
                                                    <td class="content-block" style="box-sizing: border-box; font-family: 'Roboto', sans-serif; font-size: 12px; margin: 0; padding: 20px 0 0; vertical-align: top;" valign="top">Thanks for choosing <b>Lassets</b></td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </td>
    </tr>
    </tbody>
</table>
</body>